@model IEnumerable<TodoProjects4.Models.TodoObject>

@{
    ViewBag.Title = "Result";
}
<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
    }

    body {
        background: linear-gradient(40deg, #C0C0C0, #E6E9EA 50%, #696B6C);
        font-family: Arial, sans-serif;
    }

    .container {
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .sequence-header {
        font-size: 800px;
    }

    .spacer-row td {
        height: 40px;
    }

    .btn {
        font-size: 20px;
        color: #687DE3;
        font-weight: 400;
        padding: 3px 8px;
        margin-right: 30px;
        border-radius: 8px;
        border: 1px solid rgba(255, 102, 102, .5);
        box-shadow: 0 5px 15px rgba(255, 102, 102, .3);
    }
</style>

<h2>Result</h2>

<div class="container">
    <table>
        <thead>
            <tr>
                <td align="center"></td>
                <th colspan="3" class="btn" style="font-size: 30px;"><strong>Sequence</strong></th>
            </tr>
            <tr class="spacer-row">
                <td colspan="3"></td>
            </tr>
        </thead>
        <thead>
            <tr>
                <th>todo</th>
                <th>totalscore</th>
                <th>deadline</th>
                <th>note</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var score in Model)
            {
                <tr>
                    <td align="center"></td>

                    <th style="font-size: 20px;">@score.todo</th>
                    <th style="font-size: 20px;">@score.TotalScore</th>

                    <td style="padding-right: 150px;">

                        @(score.deadLine?.ToString("yyyy-MM-dd"))
                    </td>
                    <td style="padding-left: 30px;">

                        @score.note
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>